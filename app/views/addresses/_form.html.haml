= form_for @address do |f|
  -if @address.errors.any?
    #error_explanation
      %h2= "#{pluralize(@address.errors.count, "error")} prohibited this address from being saved:"
      %ul
        - @address.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :firstname
    = f.text_field :firstname
  .field
    = f.label :companyname
    = f.text_field :companyname
  .field
    = f.label :street1
    = f.text_field :street1
  .field
    = f.label :street2
    = f.text_field :street2
  .field
    = f.label :postalcode
    = f.text_field :postalcode
  .field
    = f.label :city
    = f.text_field :city
  .actions
    = f.submit 'Save'
