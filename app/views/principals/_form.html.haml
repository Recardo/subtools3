= form_for @principal do |f|
  -if @principal.errors.any?
    #error_explanation
      %h2= "#{pluralize(@principal.errors.count, "error")} prohibited this principal from being saved:"
      %ul
        - @principal.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
