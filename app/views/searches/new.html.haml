= simple_form_for @search do |f|
  -if @search.errors.any?
    #error_explanation
      %h2= "#{pluralize(@search.errors.count, "error")} prohibited this profil from being saved:"
      %ul
        - @search.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :category_id
    = f.collection_select :category_id, Category.all(:order => 'name'), :id, :name, :include_blank => true
  .actions
    = f.submit 'Suchen'