<!DOCTYPE HTML>
<html>
    <head>
        <title>Subtools3</title>
        <%#= stylesheet_link_tag :all %>
		<%= stylesheet_link_tag "adminmenu.css" %>
		<%= stylesheet_link_tag "jquery-ui-1.8.12.custom.css" %>
		<%= stylesheet_link_tag "style3.css" %>
		<%= stylesheet_link_tag "formstyle.css" %>
        <%#= javascript_include_tag :all %>
        <%= javascript_include_tag "application.js", "rails.js" %>
		<%#= javascript_include_tag "jquery.tools.min.js"%>
        
		<%= javascript_include_tag "jquery-1.5.1.min.js" %>
		<%= javascript_include_tag "jquery-ui-1.8.12.custom.min.js" %>
		<%= javascript_include_tag "adminmenu.js" %>
		<%= javascript_include_tag "jquery.labelwidth.js" %>
		


  <%= stylesheet_link_tag "fullcalendar.css" %>
  <%#= stylesheet_link_tag "application.css" %>
  <%#= javascript_include_tag "jquery.js" %>
  <%#= javascript_include_tag "jquery-ui-1.8.11.custom.min.js" %>
  <%= javascript_include_tag "fullcalendar.js" %>
  <%= javascript_include_tag "jquery.rest.js" %>
  
  <%= javascript_include_tag "calendar.js" %>


        <%= csrf_meta_tag %>
    </head>
    <body>
        <div id="wrapper" class="ui-widget">
            <div id="header" class="ui-corner-top">
            	<div style="float: left; width: 175px;">
                		<%= link_to image_tag("peboaLG_white.gif", :width => '175px'), root_path, :class => 'logo' %>
                </div>
                <div id="user_nav" style="float: right; width: 805px; text-align: right;">
                    <% if user_signed_in? %>
                    Angemeldet als <%= current_user.email %>. <%= link_to "Abmelden", destroy_user_session_path %>
                    <% else %>
                    <!--<%= link_to "Registrieren", new_user_registration_path %>oder-->
                    <%= link_to "Anmelden", new_user_session_path %>
                    <% end %>
                </div>
                
            </div>
            <%= render :partial => "layouts/adminmenu" %>
            <%= render :partial => "layouts/leftcolumn" %>
            <div id="content" class="ui-widget-content">
                <p class="notice">
                    <%= notice %>
                </p>
                <p class="alert">
                    <%= alert %>
                </p>
                <%= yield %>
            </div>
            <div id="footer" class="ui-corner-bottom  ui-state-default">
                <center>
                    Impressum | Kontakt | AGBs
                </center>
            </div>
        </div>
    </body>
</html>
