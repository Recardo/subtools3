<!DOCTYPE html>
<html>
    <head>
        <title>Subtools3</title>
        <%= stylesheet_link_tag :all %>
        <%= javascript_include_tag :defaults %>
        <%= csrf_meta_tag %>
    </head>
    <body>
        <div id="user_nav">
            <% if user_signed_in? %>
            Angemeldet als <%= current_user.email %>. <%= link_to "Abmelden", destroy_user_session_path %>
            <% else %>
            <%= link_to "Registrieren", new_user_registration_path %> oder <%= link_to "Anmelden", new_user_session_path %>
            <% end %>
        </div>
        <p class="notice">
            <%= notice %>
        </p>
        <p class="alert">
            <%= alert %>
        </p>
        <%= yield %>
    </body>
</html>
